{% extends 'base.html.twig' %}

{% block title %}Abonne Details{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <div class="card-header text-center bg-dark text-white">
            <h2><i class="bi bi-person-badge-fill"></i> Abonne Details</h2>
        </div>
        <div class="card-body">
            <table class="table table-bordered text-center">
                <tbody>
                    <tr>
                        <th scope="row"><i class="bi bi-hash"></i> ID</th>
                        <td>{{ abonne.id }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="bi bi-person-fill"></i> Name</th>
                        <td>{{ abonne.name }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="bi bi-person-badge-fill"></i> Firstname</th>
                        <td>{{ abonne.firstname }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="bi bi-person"></i> Fname</th>
                        <td>{{ abonne.fname }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="bi bi-person"></i> Lname</th>
                        <td>{{ abonne.lname }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="bi bi-telephone-fill"></i> Tele</th>
                        <td>{{ abonne.tele }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="bi bi-calendar-event"></i> Datetime</th>
                        <td>{{ abonne.datetime ? abonne.datetime|date('Y-m-d H:i:s') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th scope="row"><i class="bi bi-check-circle-fill"></i> Active Subscription</th>
                        <td>
                            <span class="badge {{ abonne.activeSub ? 'bg-success' : 'bg-danger' }}">
                                <i class="{{ abonne.activeSub ? 'bi bi-check-lg' : 'bi bi-x-lg' }}"></i>
                                {{ abonne.activeSub ? 'Yes' : 'No' }}
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a href="{{ path('app_abonne_index') }}" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>

            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('app_abonne_edit', {'id': abonne.id}) }}" class="btn btn-outline-warning">
                    <i class="bi bi-pencil-fill"></i> Edit
                </a>
                {{ include('abonne/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </div>
</div>

{# Additional Styles #}
<style>
    .card {
        border-radius: 15px;
        background-color: #f8f9fa;
    }

    .table th {
        width: 40%;
    }

    .table td {
        font-weight: bold;
    }

    .badge {
        font-size: 1rem;
        padding: 0.5rem;
    }

    .btn {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
    }

    .btn:hover {
        transform: scale(1.05);
        transition: transform 0.2s;
    }
</style>
{% endblock %}
