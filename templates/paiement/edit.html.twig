{% extends 'base.html.twig' %}

{% block title %}Edit Paiement
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card shadow-lg p-4">
			<div class="card-header bg-primary text-white text-center">
				<h2>
					<i class="bi bi-pencil-square"></i>
					Edit Paiement
				</h2>
			</div>
			<div class="card-body">
				<div class="alert alert-info text-center mb-4" role="alert">
					<i class="bi bi-info-circle-fill"></i>
					Update the details below to modify the payment record.
				</div>

				{# Include the form for editing Paiement #}
				{{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

				<div class="mb-4">
					{{ form_label(form.montant, 'Montant (€)', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.montant, {'attr': {'class': 'form-control', 'placeholder': 'Enter amount'}}) }}
					<div class="form-text">Specify the total payment amount in euros.</div>
					{{ form_errors(form.montant) }}
				</div>

				<div class="mb-4">
					{{ form_label(form.payDate, 'Payment Date', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.payDate, {'attr': {'class': 'form-control', 'placeholder': 'Select a date'}}) }}
					<div class="form-text">Choose the date for this payment.</div>
					{{ form_errors(form.payDate) }}
				</div>

				<div class="mb-4">
					{{ form_label(form.modePay, 'Payment Mode', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.modePay, {'attr': {'class': 'form-control', 'placeholder': 'Enter payment method (e.g., Card, Cash)'}}) }}
					<div class="form-text">Describe how the payment was made (e.g., Cash, Card).</div>
					{{ form_errors(form.modePay) }}
				</div>

				<div class="mb-4">
					{{ form_label(form.abonne, 'Abonné', {'label_attr': {'class': 'form-label'}}) }}
					{{ form_widget(form.abonne, {'attr': {'class': 'form-select'}}) }}
					<div class="form-text">Select the associated subscriber for this payment.</div>
					{{ form_errors(form.abonne) }}
				</div>

				<div class="d-flex justify-content-between mt-4">
					<a href="{{ path('app_paiement_index') }}" class="btn btn-outline-secondary shadow-sm">
						<i class="bi bi-arrow-left-circle"></i>
						Back to List
					</a>
					<button type="submit" class="btn btn-success shadow-sm">
						<i class="bi bi-check-circle"></i>
						Save
					</button>
				</div>

				{{ form_end(form) }}
			</div>

		</div>
	</div>

	{# Additional Styles and Animations #}
	<style>
		/* Card Design */
		.card {
			border-radius: 15px;
			background-color: #f8f9fa;
			animation: fadeIn 0.5s ease-in-out;
		}

		.card-header {
			border-radius: 15px 15px 0 0;
			padding: 1.5rem;
			font-size: 1.5rem;
			font-weight: bold;
		}

		.alert {
			font-size: 1rem;
			border-radius: 10px;
		}

		/* Form Styling */
		.form-label {
			font-weight: bold;
		}

		.form-control,
		.form-select {
			border-radius: 10px;
			transition: all 0.3s ease-in-out;
		}

		.form-control:focus,
		.form-select:focus {
			border-color: #007bff;
			box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
		}

		/* Buttons */
		.btn {
			display: inline-flex;
			align-items: center;
			gap: 0.5rem;
		}

		.btn:hover {
			transform: scale(1.05);
			transition: transform 0.2s;
		}

		.btn-outline-secondary:hover {
			background-color: #6c757d;
			color: white;
		}

		.btn-danger:hover {
			background-color: #d9534f;
		}

		/* Animation */
		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(-10px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		/* Responsive Footer */
		@media(max-width: 768px) {
			.card-footer {
				flex-direction: column;
				gap: 1rem;
			}
		}
	</style>
{% endblock %}
