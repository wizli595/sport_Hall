{% extends 'base.html.twig' %}

{% block title %}Paiement Index
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<h1 class="text-center mb-4">
			<i class="bi bi-cash-coin text-success"></i>
			Paiement Index
		</h1>

		<div class="table-responsive">
			<table class="table table-striped table-hover text-center shadow-sm rounded">
				<thead class="table-dark">
					<tr>
						<th>
							<i class="bi bi-hash"></i>
							ID</th>
						<th>
							<i class="bi bi-currency-euro"></i>
							Montant</th>
						<th>
							<i class="bi bi-calendar-event"></i>
							Date</th>
						<th>
							<i class="bi bi-credit-card"></i>
							Payment Mode</th>
						<th>
							<i class="bi bi-tools"></i>
							Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for paiement in paiements %}
						<tr class="align-middle">
							<td>{{ paiement.id }}</td>
							<td>{{ paiement.montant }}</td>
							<td>{{ paiement.payDate ? paiement.payDate|date('Y-m-d H:i:s') : '' }}</td>
							<td>{{ paiement.modePay }}</td>
							<td>
								<a href="{{ path('app_paiement_show', {'id': paiement.id}) }}" class="btn btn-outline-info btn-sm">
									<i class="bi bi-eye-fill"></i>
									Show
								</a>
								{% if is_granted('ROLE_ADMIN') %}
									<a href="{{ path('app_paiement_edit', {'id': paiement.id}) }}" class="btn btn-outline-warning btn-sm">
										<i class="bi bi-pencil-fill"></i>
										Edit
									</a>
								{% endif %}
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="5" class="text-muted">
								<i class="bi bi-exclamation-circle"></i>
								No records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>

		{% if is_granted('ROLE_ADMIN') %}
			<div class="text-center mt-4">
				<a href="{{ path('app_paiement_new') }}" class="btn btn-success btn-lg shadow">
					<i class="bi bi-plus-circle-fill"></i>
					Create New
				</a>
			</div>
		{% endif %}
	</div>

	{# Additional Styles #}
	<style>
		body {
			background-color: #f8f9fa;
		}

		h1 {
			font-size: 2.5rem;
			font-weight: bold;
		}

		.table {
			background-color: #ffffff;
			border-radius: 10px;
			overflow: hidden;
		}

		.btn {
			display: inline-flex;
			align-items: center;
			justify-content: center;
			gap: 0.3rem;
		}

		.btn-outline-info:hover {
			color: #0d6efd;
			background-color: rgba(13, 110, 253, 0.1);
		}

		.btn-outline-warning:hover {
			color: #ffc107;
			background-color: rgba(255, 193, 7, 0.1);
		}

		.btn-success {
			display: flex;
			align-items: center;
			gap: 0.5rem;
			transition: transform 0.2s;
		}

		.btn-success:hover {
			transform: scale(1.05);
			background-color: #198754;
		}
	</style>
{% endblock %}
