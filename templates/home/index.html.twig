{% extends 'base.html.twig' %}

{% block title %}Welcome to Our Sports Hall
{% endblock %}

{% block body %}
	<div
		class="container mt-5">
		<!-- Welcome Section -->
		<div class="text-center">
			<h1 class="display-4">Welcome to
				<span class="text-primary">Our Sports Hall</span>!</h1>
			<p class="lead">Your one-stop solution for managing subscriptions, time slots, and payments.</p>
			<hr class="my-4">
			<p>Ready to explore?</p>
			<a class="btn btn-primary btn-lg me-2" href="{{ path('app_creneau_index') }}" role="button">
				<i class="bi bi-calendar2-check"></i>
				View Time Slots
			</a>
			<a class="btn btn-success btn-lg" href="{{ path('app_paiement_index') }}" role="button">
				<i class="bi bi-wallet2"></i>
				Manage Payments
			</a>
		</div>

		<div
			class="row mt-5 text-center">
			<!-- Feature 1: Time Slots -->
			<div class="col-md-4">
				<div class="card shadow-lg h-100 d-flex flex-column hover-effect">
					<div class="card-body">
						<i class="bi bi-calendar2-check display-3 text-primary"></i>
						<h5 class="card-title mt-3">Time Slots</h5>
						<p class="card-text">View and reserve available time slots for your workouts.</p>
					</div>
					<div class="mt-auto mb-3">
						<a href="{{ path('app_creneau_index') }}" class="btn btn-outline-primary">
							<i class="bi bi-arrow-right-circle"></i>
							Explore
						</a>
					</div>
				</div>
			</div>

			<!-- Feature 2: Subscriptions -->
			<div class="col-md-4">
				<div class="card shadow-lg h-100 d-flex flex-column hover-effect">
					<div class="card-body">
						<i class="bi bi-person-check display-3 text-success"></i>
						<h5 class="card-title mt-3">Subscriptions</h5>
						<p class="card-text">Check your subscription details and manage your account.</p>
					</div>
					<div class="mt-auto mb-3">
						<a href="{{ path('app_abonne_index') }}" class="btn btn-outline-success">
							<i class="bi bi-arrow-right-circle"></i>
							View
						</a>
					</div>
				</div>
			</div>

			<!-- Feature 3: Payments -->
			<div class="col-md-4">
				<div class="card shadow-lg h-100 d-flex flex-column hover-effect">
					<div class="card-body">
						<i class="bi bi-wallet2 display-3 text-warning"></i>
						<h5 class="card-title mt-3">Payments</h5>
						<p class="card-text">Manage your payments and download invoices easily.</p>
					</div>
					<div class="mt-auto mb-3">
						<a href="{{ path('app_paiement_index') }}" class="btn btn-outline-warning">
							<i class="bi bi-arrow-right-circle"></i>
							Manage
						</a>
					</div>
				</div>
			</div>
		</div>

	</div>

	<style>
		/* Animation and Hover Effects */
		.hover-effect:hover {
			transform: translateY(-5px);
			transition: transform 0.3s ease-in-out;
		}

		.hover-effect .bi {
			transition: color 0.3s ease-in-out;
		}

		.hover-effect:hover .bi {
			color: var(--gray-900);
		}

		.btn i {
			margin-right: 8px;
		}
	</style>
{% endblock %}
