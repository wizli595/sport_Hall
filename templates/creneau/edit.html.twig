{% extends 'base.html.twig' %}

{% block title %}Edit Creneau
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<div class="card shadow-lg p-4">
			<div class="card-header bg-warning text-white text-center">
				<h2>
					<i class="bi bi-pencil-square"></i>
					Edit Creneau
				</h2>
			</div>
			<div class="card-body">
				<div class="alert alert-info text-center" role="alert">
					<i class="bi bi-info-circle-fill"></i>
					Update the details for the selected time slot.
				</div>

				{# Include the form for editing the Creneau #}
				{{ include('creneau/_form.html.twig', {'button_label': 'Update'}) }}


			</div>
		</div>
	</div>

	{# Additional Styles and Animations #}
	<style>
		/* Card Design */
		.card {
			border-radius: 15px;
			background-color: #f8f9fa;
			animation: fadeIn 0.5s ease-in-out;
		}

		.card-header {
			border-radius: 15px 15px 0 0;
			padding: 1.5rem;
			font-size: 1.5rem;
			font-weight: bold;
		}

		/* Form Styling */
		.form-label {
			font-weight: bold;
		}

		.form-control,
		.form-check-input {
			border-radius: 10px;
			transition: all 0.3s ease-in-out;
		}

		.form-control:focus,
		.form-check-input:focus {
			border-color: #007bff;
			box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
		}

		/* Buttons */
		.btn {
			display: inline-flex;
			align-items: center;
			gap: 0.5rem;
		}

		.btn:hover {
			transform: scale(1.05);
			transition: transform 0.2s;
		}

		.btn-outline-secondary:hover {
			background-color: #6c757d;
			color: white;
		}

		.btn-danger:hover {
			background-color: #dc3545;
		}

		/* Alert Styling */
		.alert {
			font-size: 1rem;
			border-radius: 10px;
		}

		/* Fade-In Animation */
		@keyframes fadeIn {
			from {
				opacity: 0;
				transform: translateY(-10px);
			}
			to {
				opacity: 1;
				transform: translateY(0);
			}
		}

		/* Responsive Design */
		@media(max-width: 768px) {
			.d-flex {
				flex-direction: column;
				gap: 1rem;
			}
		}
	</style>
{% endblock %}
