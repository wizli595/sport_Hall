<div class="container mt-5">
	<div class="card shadow-lg p-4">
		<div class="card-header bg-primary text-white text-center">
			<h2>
				<i class="bi bi-calendar-plus"></i>
				Create New Creneau
			</h2>
		</div>
		<div class="card-body">
			{{ form_start(form, { 'attr': { 'class': 'needs-validation', 'novalidate': 'novalidate' } }) }}

			<div class="mb-4">
				{{ form_label(form.date, 'Date', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.date, {'attr': {'class': 'form-control', 'placeholder': 'Select a date'}}) }}
				<div class="form-text">Choose the date for this time slot.</div>
				{{ form_errors(form.date) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.startTime, 'Start Time', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.startTime, {'attr': {'class': 'form-control', 'placeholder': 'Select start time'}}) }}
				<div class="form-text">Set the starting time for this slot.</div>
				{{ form_errors(form.startTime) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.endTime, 'End Time', {'label_attr': {'class': 'form-label'}}) }}
				{{ form_widget(form.endTime, {'attr': {'class': 'form-control', 'placeholder': 'Select end time'}}) }}
				<div class="form-text">Set the ending time for this slot.</div>
				{{ form_errors(form.endTime) }}
			</div>

			<div class="form-check mb-4">
				{{ form_widget(form.dispo, {'attr': {'class': 'form-check-input'}}) }}
				{{ form_label(form.dispo, 'Available', {'label_attr': {'class': 'form-check-label'}}) }}
				<div class="form-text">Mark this slot as available.</div>
				{{ form_errors(form.dispo) }}
			</div>

			<div class="text-center mt-4">
				<button type="submit" class="btn btn-success btn-lg shadow-sm">
					<i class="bi bi-check-circle"></i>
					Save
				</button>
				<a href="{{ path('app_creneau_index') }}" class="btn btn-outline-secondary btn-lg shadow-sm">
					<i class="bi bi-arrow-left-circle"></i>
					Back to List
				</a>
			</div>

			{{ form_end(form) }}
		</div>
	</div>
</div>

