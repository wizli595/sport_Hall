{% extends 'base.html.twig' %}

{% block title %}Manage Users{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="card shadow-lg">
        <div class="card-header bg-dark text-white text-center">
            <h2><i class="bi bi-people"></i> Manage Users</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover text-center">
                    <thead class="table-dark">
                        <tr>
                            <th><i class="bi bi-hash"></i> ID</th>
                            <th><i class="bi bi-envelope"></i> Email</th>
                            <th><i class="bi bi-person-badge"></i> Roles</th>
                            <th><i class="bi bi-tools"></i> Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>{{ user.id }}</td>
                                <td>{{ user.email }}</td>
                                <td>
                                    {% for role in user.roles %}
                                        <span class="badge bg-primary">{{ role }}</span>
                                    {% endfor %}
                                </td>
                                <td>
                                    <a href="{{ path('app_user_show', {'id': user.id}) }}" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye"></i> View
                                    </a>
                                    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-warning btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    {{ include('user/_delete_form.html.twig', { 'user': user }) }}
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4" class="text-muted"><i class="bi bi-exclamation-circle"></i> No users found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="text-center mt-4">
                <a href="{{ path('app_user_new') }}" class="btn btn-success btn-lg shadow">
                    <i class="bi bi-person-plus-fill"></i> Add New User
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
